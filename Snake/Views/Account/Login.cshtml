@model Snake.ViewModels.LoginViewModel

    <div  id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div class="login-box col-md-12">




                        <form id="login-form" class="form" action="" method="post">
                            <div class="form-group">
                                <label asp-for="Login">Login</label>
                                <input class="form-control d-block" style="width: 100%" asp-for="Login"/>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Hasło</label>
                                <input type="password" class="form-control d-block showpassword" style="width: 100%" id="password" asp-for="Password" />
                            </div>

                            <div asp-validation-summary="All"></div>

                            <div class="form-group">
                                <label asp-for="RememberMe">Remember me</label>
                                <input class="form-input" asp-for="RememberMe" />
                            </div>
                            <div class="form-group">
                                <button class="btn btn-info btn-sm button-login" type="button" name="showpassword" id="showpassword" value="Show Password">Show Password</button>
                                <button type="submit" class="btn btn-primary btn-sm button-login">Submit</button>
                            </div>
                        </form>







                    </div>
                </div>
            </div>
        </div>
    </div>
        
